{
  "name": "raxol",
  "displayName": "Raxol Language Support",
  "description": "Language support for Raxol terminal UI framework",
  "version": "1.5.4",
  "publisher": "axol-io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/axol-io/raxol.git"
  },
  "homepage": "https://raxol.io",
  "bugs": {
    "url": "https://github.com/axol-io/raxol/issues"
  },
  "keywords": [
    "raxol",
    "terminal",
    "ui",
    "elixir",
    "language-server"
  ],
  "categories": [
    "Programming Languages",
    "Extension Packs",
    "Snippets"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:elixir",
    "workspaceContains:mix.exs",
    "workspaceContains:.raxol.exs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "raxol-elixir",
        "aliases": ["Raxol Elixir", "raxol"],
        "extensions": [".ex", ".exs"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raxol-elixir",
        "scopeName": "source.elixir.raxol",
        "path": "./syntaxes/raxol.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "elixir",
        "path": "./snippets/raxol.json"
      }
    ],
    "commands": [
      {
        "command": "raxol.startLSP",
        "title": "Start Raxol LSP Server",
        "category": "Raxol"
      },
      {
        "command": "raxol.restartLSP",
        "title": "Restart Raxol LSP Server", 
        "category": "Raxol"
      },
      {
        "command": "raxol.generateComponent",
        "title": "Generate Component",
        "category": "Raxol"
      },
      {
        "command": "raxol.openPlayground",
        "title": "Open Component Playground",
        "category": "Raxol"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "raxol.generateComponent",
          "when": "workspaceContains:mix.exs"
        },
        {
          "command": "raxol.openPlayground", 
          "when": "workspaceContains:mix.exs"
        }
      ],
      "explorer/context": [
        {
          "command": "raxol.generateComponent",
          "group": "raxol",
          "when": "explorerResourceIsFolder && workspaceContains:mix.exs"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Raxol",
      "properties": {
        "raxol.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Raxol Language Server Protocol support"
        },
        "raxol.lsp.path": {
          "type": "string", 
          "default": "mix",
          "description": "Path to mix command for starting LSP server"
        },
        "raxol.lsp.args": {
          "type": "array",
          "default": ["raxol.lsp", "--stdio"],
          "description": "Arguments to pass to LSP server"
        },
        "raxol.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable component and lifecycle method autocompletion"
        },
        "raxol.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable component validation diagnostics"
        },
        "raxol.playground.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open component playground on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}