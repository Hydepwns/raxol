{
  "name": "raxol",
  "displayName": "Raxol Terminal Framework",
  "description": "Advanced development support for Raxol terminal UI framework",
  "version": "1.0.1",
  "publisher": "raxol-team",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes",
    "Other"
  ],
  "keywords": [
    "raxol",
    "terminal",
    "ui",
    "elixir",
    "tui",
    "components",
    "framework"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:**/mix.exs",
    "onLanguage:elixir"
  ],
  "contributes": {
    "languages": [
      {
        "id": "raxol",
        "aliases": ["Raxol", "raxol"],
        "extensions": [".rx", ".raxol"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raxol",
        "scopeName": "source.raxol",
        "path": "./syntaxes/raxol.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "elixir",
        "path": "./snippets/raxol-snippets.json"
      },
      {
        "language": "raxol",
        "path": "./snippets/raxol-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "raxol.startPlayground",
        "title": "Start Component Playground",
        "category": "Raxol"
      },
      {
        "command": "raxol.startTutorial",
        "title": "Start Interactive Tutorial",
        "category": "Raxol"
      },
      {
        "command": "raxol.preview",
        "title": "Preview Component",
        "category": "Raxol"
      },
      {
        "command": "raxol.newProject",
        "title": "New Raxol Project",
        "category": "Raxol"
      },
      {
        "command": "raxol.newComponent",
        "title": "New Component",
        "category": "Raxol"
      },
      {
        "command": "raxol.runTests",
        "title": "Run Tests",
        "category": "Raxol"
      },
      {
        "command": "raxol.openREPL",
        "title": "Open Raxol REPL",
        "category": "Raxol"
      },
      {
        "command": "raxol.showDocumentation",
        "title": "Show Documentation",
        "category": "Raxol"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .ex",
          "command": "raxol.preview",
          "group": "raxol"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "raxol.newComponent",
          "group": "raxol"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .ex && editorLangId == elixir",
          "command": "raxol.preview",
          "group": "raxol"
        }
      ],
      "commandPalette": [
        {
          "command": "raxol.startPlayground",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "raxol.startTutorial",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "raxol.preview",
          "when": "editorLangId == elixir"
        }
      ]
    },
    "keybindings": [
      {
        "command": "raxol.preview",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorLangId == elixir"
      },
      {
        "command": "raxol.openREPL",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "raxolComponents",
          "name": "Raxol Components",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "raxol",
          "title": "Raxol",
          "icon": "$(terminal)"
        }
      ]
    },
    "configuration": {
      "title": "Raxol",
      "properties": {
        "raxol.enablePreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable component preview functionality"
        },
        "raxol.previewTheme": {
          "type": "string",
          "enum": ["default", "dark", "light"],
          "default": "default",
          "description": "Default theme for component previews"
        },
        "raxol.autoStartREPL": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start Raxol REPL when opening a Raxol project"
        },
        "raxol.mixPath": {
          "type": "string",
          "default": "mix",
          "description": "Path to the mix executable"
        },
        "raxol.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for Raxol components"
        },
        "raxol.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for Raxol components and props"
        }
      }
    },
    "problemMatchers": [
      {
        "name": "raxol",
        "owner": "raxol",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "raxol",
        "required": ["task"],
        "properties": {
          "task": {
            "type": "string",
            "description": "The Raxol task to run"
          },
          "args": {
            "type": "array",
            "description": "Additional arguments for the task"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.x",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raxol-team/vscode-raxol"
  },
  "bugs": {
    "url": "https://github.com/raxol-team/vscode-raxol/issues"
  },
  "homepage": "https://github.com/raxol-team/vscode-raxol#readme",
  "license": "MIT"
}